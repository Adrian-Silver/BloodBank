<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/outlinebuttonshape"
            android:orientation="vertical"
            android:padding="20dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/profileicon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvDonorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PersonName"
                        android:textColor="@color/colorDark"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tvDonorLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PersonLocation"
                        android:textColor="@color/colorDark"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tvDonorContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact: "
                        android:textColor="@color/colorDark"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tvRecipientBloodType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="BloodType"
                        android:textColor="@color/colorDark"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="A+ 0.0km"
                        android:textSize="15dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tvRecipientGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:text="Gender: "
                    android:textColor="@color/colorDark"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txt_BloodGrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female "
                    android:textColor="@color/colorDark"
                    android:textSize="17dp" />


                <ImageButton
                    android:id="@+id/ibtnCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_call"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/buttonshape"
                    android:contentDescription="@string/call_donor" />

                <ImageButton
                    android:id="@+id/ibtnMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_message"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/buttonshape"
                    android:contentDescription="@string/call_donor" />

<!--                <Button-->
<!--                    android:id="@+id/ivMessage"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="10dp"-->
<!--                    android:layout_weight="1"-->
<!--                    android:background="@drawable/buttonshape"-->
<!--                    android:text="Donate Blood"-->
<!--                    android:textColor="@color/white" />-->


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>