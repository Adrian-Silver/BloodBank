<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MekeDonationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/make_a_donation"
                    android:padding="20dp"
                    android:gravity="center_horizontal"
                    android:textSize="25sp"
                    android:textColor="@color/yellow"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Personal Information"
                    android:gravity="center"
                    android:padding="20dp"
                    android:drawableTint="@color/yellow"
                    android:drawableStart="@drawable/ic_profile_dark"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"
                    android:drawablePadding="20dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edit_name"
                        android:layout_width="match_parent"
                        android:hint="Name"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/edit_age"
                        android:layout_width="match_parent"
                        android:hint="Age"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/edit_phone"
                        android:layout_width="match_parent"
                        android:hint="Phone"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/edit_hospital"
                        android:layout_width="match_parent"
                        android:hint="Hospital Name And Location"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Location of donation"
                    android:padding="20dp"
                    android:drawableTint="@color/yellow"
                    android:drawableStart="@drawable/ic_profile_dark"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"
                    android:drawablePadding="20dp"
                    />

                <EditText
                    android:id="@+id/edit_userLocation"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="Your Location"
                    android:layout_height="0dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Select"
                    android:textColor="@color/white"
                    android:background="@drawable/buttonshape"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Blood Group"
                    android:padding="20dp"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:drawablePadding="20dp"
                    app:drawableStartCompat="@drawable/ic_group_red"
                    app:drawableTint="@color/yellow" />
                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <RadioButton
                        android:id="@+id/bloodGrp_A_P"
                        android:background="@drawable/outlinebuttonshape"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content"
                        android:text="A+"
                        android:textColor="@color/black"
                        />
                    <RadioButton
                        android:id="@+id/bloodGrp_B_P"
                        android:background="@drawable/outlinebuttonshape"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content"
                        android:text="B+"
                        android:textColor="@color/black"
                        />
                    <RadioButton
                        android:id="@+id/bloodGrp_AB_P"
                        android:background="@drawable/outlinebuttonshape"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content"
                        android:text="AB+"
                        android:textColor="@color/black"
                        />
                    <RadioButton
                        android:id="@+id/bloodGrp_O_P"
                        android:background="@drawable/outlinebuttonshape"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content"
                        android:text="O+"
                        android:textColor="@color/black"
                        />


                </RadioGroup>
                <RadioGroup
                    android:id="@+id/radio_group2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <RadioButton
                        android:id="@+id/bloodGrp_A_N"
                        android:background="@drawable/outlinebuttonshape"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content"
                        android:text="A-"
                        android:textColor="@color/black"
                        />
                    <RadioButton
                        android:id="@+id/bloodGrp_B_N"
                        android:background="@drawable/outlinebuttonshape"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content"
                        android:text="B-"
                        android:textColor="@color/black"
                        />
                    <RadioButton
                        android:id="@+id/bloodGrp_AB_N"
                        android:background="@drawable/outlinebuttonshape"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content"
                        android:text="AB-"
                        android:textColor="@color/black"
                        />
                    <RadioButton
                        android:id="@+id/bloodGrp_O_N"
                        android:background="@drawable/outlinebuttonshape"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="O-"/>


                </RadioGroup>


                <Button
                    android:id="@+id/publish"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="Publish"
                    android:textColor="@color/white"
                    android:background="@drawable/buttonshape"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>